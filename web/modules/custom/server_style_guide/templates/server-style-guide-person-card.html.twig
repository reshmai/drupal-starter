<h2 class="text-2xl font-bold mb-4">{{ title }}</h2>

{% if link %}
  <a href="{{ link }}" class="text-blue-600 underline mb-6 inline-block">Design link</a>
{% endif %}

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 justify-items-center">
  {% for card in cards %}
    <div class="max-w-[344px] bg-white shadow-md rounded-lg flex flex-col items-center p-6">
      <img src="{{ card.image }}" alt="{{ card.name }}" class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 rounded-full object-cover mb-4">
      <h3 class="text-xl font-semibold text-gray-800 text-center">{{ card.name }}</h3>
      <p class="text-gray-500 text-sm text-center">{{ card.role }}</p>
    </div>
  {% endfor %}
</div>
